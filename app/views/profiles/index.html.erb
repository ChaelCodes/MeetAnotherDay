<div class="container">
  <div class="section">
    <h1 class="title">Profiles</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Handle</th>
          <th class="is-hidden-mobile">Bio</th>
        </tr>
      </thead>

      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= link_to profile %></td>
            <td><%= profile.handle %></td>
            <td class="is-hidden-mobile"><%= profile.bio %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
