<% if event_attendees %>
  <h4><%= t(".buddies_attending", count: event_attendees.count) %></h4>
  <ul>
    <% event_attendees.each do |event_attendee| %>
      <li>
        <%= image_tag profile_picture(event_attendee.profile.email, size: 16), alt: "Profile pic of #{event_attendee.profile.handle}" %>
        <%= link_to event_attendee.profile %>
      </li>
    <% end %>
  </ul>
<% end %>
